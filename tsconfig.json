{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": false,
        "target": "esnext",
        "lib": ["ESNext"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": true,
         "allowImportingTsExtensions": true
    },
    "include": ["src/**/*.ts"]
    
}